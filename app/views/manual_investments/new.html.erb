<h1>New manual investment</h1>

<%= turbo_frame_tag "new_manual_investment", target: '_top' do %>
  <%= form_with(model: @manual_investment,
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
    <% if @manual_investment.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@manual_investment.errors.count, "error") %> prohibited this manual_investment from being saved:</h2>

        <ul>
          <% @manual_investment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :bought_at, style: "display: block" %>
      <%= form.date_field :bought_at %>
    </div>

    <div>
      <%= form.label :value, style: "display: block" %>
      <%= form.text_field :value %>
    </div>

    <div>
      <%= form.label :investment_name, style: "display: block" %>
      <%= form.text_field :investment_name %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

<br>

<div>
  <%= link_to "Back to manual investments", manual_investments_path %>
</div>
